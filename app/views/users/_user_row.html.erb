<tr id="userRow <%= user.id %>" >
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.email %></td>
  <td><%= link_to 'Show', user , data: { toggle:"modal", target:"#showUserModal", remote: true}%></td>
  <td><%= link_to 'Edit', edit_user_path(user), data: { toggle: "modal", target: "#editUserModal", remote: true} %></td>
  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' , remote: true } %></td>
</tr>